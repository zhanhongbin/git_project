{
	"info": {
		"_postman_id": "d137951c-45c7-4b08-8374-deda052e1652",
		"name": "IHRM项目实战登录模块参数化测试",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "登录",
			"event": [
				{
					"listen": "test",
					"script": {
						"id": "83d927b1-a0e1-452c-aa38-ac46c062c51c",
						"exec": [
							"",
							"",
							"// 断言响应状态码",
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(data.httpcode);",
							"});",
							"",
							"// 断言success的值",
							"pm.test(\"断言success的值\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.success).to.eql(data.success);",
							"});",
							"",
							"// 断言code的值",
							"pm.test(\"断言code的值\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.code).to.eql(data.code);",
							"});",
							"",
							"// 断言message的值",
							"pm.test(\"断言message的值\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.message).to.eql(data.message);",
							"});"
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "prerequest",
					"script": {
						"id": "2a9b7bd5-3df1-441a-ae79-febf15d87746",
						"exec": [
							"// 转换外部文件中的json对象",
							"var jsonstr =JSON.stringify(data.ihrm_login_data);",
							"console.log(\"转换后的json请求数据为：\" + jsonstr);",
							"pm.environment.set(\"ihrm_request_body\", jsonstr)"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"type": "text",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{{ihrm_request_body}}"
				},
				"url": {
					"raw": "{{base_url}}/api/sys/login",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"sys",
						"login"
					]
				}
			},
			"response": []
		}
	],
	"protocolProfileBehavior": {}
}